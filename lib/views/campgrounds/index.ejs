<%- include("../partials/header") %>

<header class="jumbotron">
	<div class="container">
		<h1>Welcome to YelpCamp!</h1>
		<p>View our hand-picked campgrounds from all over the world</p>
		<p>
			<a class="btn btn-primary btn-large" href="/campgrounds/new"><i class="fas fa-plus"></i> Add New Campground</a>
		</p>
		<p>
			<form action="/campgrounds" method="GET" class="form-inline">
				<div class="form-group">
					<input type="text" name="search" placeholder="Campground search..." class="form-control">
					<input type="submit" value="Search" class="btn btn-secondary ml-2">
				</div>
			</form>
		</p>
	</div>
</header>


<div class="row justify-content-center rounded bg-light p-3">
	<div class="col">
		<h3>Our most popular Campgrounds!</h3>	
		<hr>
		<% if(noMatch !== null) { %>
			<div class="alert alert-primary text-center" role="alert">
				<%=noMatch%>
			</div>
		<% }%>
		<div class="row">
			<% campgrounds.forEach((campground) => { %>
				<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
					<div class="card">
						<img src="<%=campground.image%>" class="card-img-top" alt="<%=campground.name%>" onclick="showImgModal()">
						<div class="card-body">
							<h5 class="card-title"><%= campground.name %></h5>
							<p class="card-text"></p>
							<div class="row text-center">
								<div class="col">
									<div>
										   <span class="badge badge-pill badge-secondary mb-2"><i class="fas fa-thumbs-up"></i> <%= campground.likes.length %></span>

									</div>
									<a href="/campgrounds/<%= campground.slug %>" class="btn btn-primary">More Info</a>
								</div>
							</div>

						</div>
					</div>
				</div>
			<% }); %>
		</div>
		<%- include("./pagination") %>
	</div>
</div>


<%- include("../partials/footer") %>

<%- include("../partials/header") %>

<div class="row">
	<div class="col-md-4">
		<div class="list-group">
			<li class="list-group-item active">
				<em><strong>Address</strong></em> 
				<p>
					<%=campground.location%>
				</p>
			<li class="list-group-item">
				<em><strong>Latitude</strong></em> 
				<p>
					<%=campground.lat%><span>&#176;</span> 
				</p>
			</li>
			<li class="list-group-item">
				<em><strong>Longitude</strong></em> 
				<p>
					<%=campground.lng%><span>&#176;</span> 
				</p>
			</li>
			<div>
				<div id="map" class="rounded-bottom">hello</div>
			</div>
			
		</div>
	</div>
	<div class="col-md-8">
		<div class="card mb-3">
			<img src="<%=campground.image%>" class="card-img-top" alt="<%=campground.name%>" onclick="showImgModal()">
			<div class="card-body">
				<p class="float-right">$<%=campground.price%>/night</p>
				<h5 class="card-title"><%= campground.name %></h5>
				<p class="card-text">
					<p> 
						<em>Submitted By <a href="/users/<%= campground.author._id %>"><%= campground.author.username %></a>, <%= moment(campground.createdAt).fromNow() %></em>
					</p>
					<% model = "campground" %>
					<% modelInstance = campground %>
					<% dataTarget = "campgroundLikes_"+modelInstance._id  %>
					<%- include("../likes/like-buttons") %>
					<hr>
					<h5>Description</h4>
					<p><%= campground.description %></p>
				</p>
				<% if(currentUser && campground.author._id.equals(currentUser._id) || currentUser && currentUser.isAdmin) { %>
			<a class="btn btn-warning" href="/campgrounds/<%=campground.slug%>/edit">Edit</a>
				<form class="delete-form" action="/campgrounds/<%=campground.slug%>?_method=DELETE" method="POST">
					<button class="btn btn-danger">Delete</button>
				</form>
				<% } %>
			</div>
		</div>
		<div class="card">
			<div class="card-body">
				<% model = "campground" %>
				<% modelInstance = campground %>
				<%- include("../comments/new-button") %>
				<!--Comment section title-->
				<h4 ><strong>Comments <i class="fas fa-comment"></i></strong></h4>
				<br>
				<%- include("../comments/new-form-block") %>
				<hr>
				<% campground.comments.forEach((commentTemp) => { %>
					<% comment = commentTemp %>
					<%- include("../comments/show-block") %>
				<% }) %>
			</div>
		</div>
	</div>
</div>

<%- include("../likes/like-modal") %>

<script>
	function initMap() {
		var lat = <%= campground.lat %>;
		var lng = <%= campground.lng %>;
		var center = {lat: lat, lng: lng };
		var map = new google.maps.Map(document.getElementById('map'), {
			zoom: 8,
			center: center,
			scrollwheel: false
		});
		var contentString = `
			<strong><%= campground.name %><br />
			<%= campground.location %></strong>
			<p><%= campground.description %></p>
		`
		var infowindow = new google.maps.InfoWindow({
			content: contentString
		});
		var marker = new google.maps.Marker({
			position: center,
			map: map
		});
		marker.addListener('click', function() {
			infowindow.open(map, marker);
		});
	}
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDjx2_MGCW93w4iDnACDo-AMf-sT_SWrPg&callback=initMap"></script>

<%- include("../partials/footer") %>
<!--Edit comment form-->
<% 
collapseFormId = `collapse-edit-comment-form-${id}`;
formId = `edit-comment-form-${id}`;
%>
<% if(commentInstance.isAuthorized(currentUser)) { %>
<div class="collapse" id="<%=collapseFormId%>">
	<div class="card" style="border-left: 5px solid #ffbb33; margin-top: 15px;">
		<div class="card-body">	
			<h4>Edit your comment <i class="fas fa-edit"></i></h4>
				<form id="<%=formId%>" 
					  action="/<%=parentInstance.model.toLowerCase()%>s/<%=parentInstance.id%>/comments/<%=commentInstance.id%>/?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" disabled value="<%= currentUser.username %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="comment[text]" placeholder="Your comment text..." 
							  form="<%=formId%>" rows="5" cols="70"><%= commentInstance.instance.text %></textarea>
				</div>
				<div class="form-group">
					<input class="form-control d-none" name="parent" type="text" 
						   value="<%= parentInstance.model.toLowerCase() %>">
				</div>
				<div class="form-group">
					<button class="btn btn-warning btn-sm"> Submit <i class="fas fa-comment"></i>					
					</button>
					<a class="btn btn-sm btn-secondary float-right" role="button" data-toggle="collapse" 
					   href="#<%=collapseFormId%>" aria-expanded="false" 
					   aria-controls="<%=collapseFormId%>"> Cancel
					</a>
				</div>
			</form>
		</div>
	</div>
</div>
<% } %>
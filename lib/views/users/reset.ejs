<%- include("../partials/header") %>
<div class="row justify-content-center">
	<div class="col-xs-12 col-md-6 col-lg-4 rounded bg-light p-3">
		<form action="/reset/<%=token%>" method="POST">
			<legend>Reset Password</legend>
			<p>
				Please enter your new password to reset it.
			</p>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" name="password" autofocus class="form-control">
			</div>
			<div class="form-group">
				<label for="confirm">Confirm Password</label>
				<input type="password" name="confirm" autofocus class="form-control">
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-primary" value="Reset Password">
			</div>
		</form>
	</div>
</div>
<%- include("../partials/footer")%>